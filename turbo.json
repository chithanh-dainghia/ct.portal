{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "inputs": [
        "!**/*.spec.tsx",
        "!**/*.spec.ts",
        "!**/*.stories.tsx",
        "!**/*.stories.ts",
        "!.eslintrc.cjs",
        "!tsconfig.eslint.json",
        "!vitest.config.ts",
        "!vitest.setup.ts"
      ]
    },
    "lint": {},
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "tsc": {
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build:dev": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "inputs": [
        "!**/*.spec.tsx",
        "!**/*.spec.ts",
        "!**/*.stories.tsx",
        "!**/*.stories.ts",
        "!.eslintrc.cjs",
        "!tsconfig.eslint.json",
        "!vitest.config.ts",
        "!vitest.setup.ts"
      ]
    },
    "build:prod": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "inputs": [
        "!**/*.spec.tsx",
        "!**/*.spec.ts",
        "!**/*.stories.tsx",
        "!**/*.stories.ts",
        "!.eslintrc.cjs",
        "!tsconfig.eslint.json",
        "!vitest.config.ts",
        "!vitest.setup.ts"
      ]
    }
  }
}
