{
  "name": "ct.portal",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "prepare": "husky install",
    "web": "cd ./apps/web && pnpm dev",
    "sleeklingo": "cd ./apps/web && pnpm dev",
    "sleeklingo:start": "cd ./apps/web && pnpm start",
    "build:dev": "cd ./apps/web && pnpm build:dev",
    "build:prod": "cd ./apps/web && pnpm build:prod",
    "format-lint": "prettier --config .prettierrc --check --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown -l .",
    "analyze": "cd ./apps/web && pnpm analyze",
    "prisma": "cd ./apps/web && pnpm prisma generate"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "esbuild": "^0.17.5",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.33.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.4.1",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^13.1.0",
    "msw": "^1.0.0",
    "prettier": "2.8.8",
    "pretty-quick": "3.1.3",
    "turbo": "latest",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "pnpm@8.6.10"
}
